@model Ripper.Models.BoardCutter
@{
    ViewBag.Title = "Rip Cuts";
}
<style>
    .boards {
        width: 100%;
        height: 24px;
        border: 1px solid #000000;
    }
        .boards div {
            float: left;
            border: 1px solid #000000;
            text-align: center;
        }
</style>
<div class="container-fluid">
    <h2>Calculations:</h2>
    <div class="row">
        <div class="col-md-12">
            <dl>
                <dt>Boards:</dt>
                @foreach (var item in Model.Boards())
                {
                    <dd>@item.GetLength()</dd>
                }
                <dt>Lengths Needed:</dt>
                @foreach (var item in Model.Lengths())
                {
                    <dd>@item.GetLength()</dd>
                }
                <dt>Summary:</dt>
                @foreach (var item in Model.Summary)
                {
                    <dd>@item</dd>
                }
            </dl>
        </div>
    </div>
</div>


@foreach (var item in Model.Boards())
{
    <p><b>Board:</b> @item.GetLength()</p>
    <p><b>Remainder:</b> @item.GetRemainder()</p>
    <div class="boards">
        @foreach (var cut in item.GetCutList())
        {
            <div style="width: @cut.GetPercent()%;">@cut.GetLength()</div>
        }
    </div>
    <br />
    <br />
}



